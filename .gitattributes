# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF
*.py text eol=lf
*.pyi text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# JSON files
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# SQL files
*.sql text eol=lf

# Markdown
*.md text eol=lf

# Config files
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
